<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toEndOf="@id/latest_message_user_image"
    app:layout_constraintTop_toTopOf="@id/latest_message_user_image"
    app:layout_constraintBottom_toBottomOf="@id/latest_message_user_image"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/latest_message_user_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/latest_message_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/latest_message_user_image"
        app:layout_constraintTop_toTopOf="@id/latest_message_user_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_medium"
        android:text="SAMPLE NAME"

        />

    <TextView
        android:id="@+id/latest_message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/latest_message_user_image"
        app:layout_constraintTop_toBottomOf="@id/latest_message_username"
        app:layout_constraintBottom_toBottomOf="@id/latest_message_user_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_light"
        android:text="SAMPLE MESSAGE"
        />

</androidx.constraintlayout.widget.ConstraintLayout>